CREATE TABLE GESCHAEFTSPARTNER(
    Geschaeftspartnernummer   NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    Strasse                   VARCHAR2(255) NOT NULL,
    Nummer                    VARCHAR2(255) NOT NULL,
    Ort                       VARCHAR2(255) NOT NULL,
    PLZ                       INT           NOT NULL,
    IBAN                      VARCHAR2(255) NOT NULL,
    Email                     VARCHAR2(255) NOT NULL
);

ALTER TABLE KUNDE
ADD (FK_GESCHAEFTSPARTNERNUMMER NUMBER);

ALTER TABLE KUNDE
ADD CONSTRAINT GESCHAEFTSPARTNER_FK FOREIGN KEY (FK_GESCHAEFTSPARTNERNUMMER) REFERENCES GESCHAEFTSPARTNER (GESCHAEFTSPARTNERNUMMER);

ALTER TABLE LIEFERANT
ADD (FK_GESCHAEFTSPARTNERNUMMER NUMBER);

ALTER TABLE LIEFERANT
ADD CONSTRAINT GESCHAEFTSPARTNER_FK FOREIGN KEY (FK_GESCHAEFTSPARTNERNUMMER) REFERENCES GESCHAEFTSPARTNER (GESCHAEFTSPARTNERNUMMER);

